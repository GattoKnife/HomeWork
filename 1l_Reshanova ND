import Foundation
//Простейшее квадратное уравнение
print("Хотите решить квадратное уравнение: x2 - a = 0 - для этого задайте значение а ")//пользователь вводит а
var a: Double = 25
print("Таким образом ваше уровнение выглядит так: x2 - \(a) = 0")
let x: Double = a.squareRoot()
print("Ваш ответ \(x)")
    
    //Расчет площади и гипотенузы прямоугольного тругольника по катетам
print("Задайте катеты прямоугольного треугольника: - 4 см и 2,5 см. Программа вычислbт площадь и гипотенузу.")
var katOne: Double = 7
var katTwo: Double = 9
var Squar = (katOne*katTwo)/2
//var Gip = ((katOne*katOne)+(katTwo*katTwo)).squareRoot()
var Gip = (pow(katOne,2) + pow(katTwo,2)).squareRoot()
print("Таким образом площадь равна: \(Squar), а гипотенуза равна: \((Gip*100).rounded()/100)")

//Расчет процента вклада
let Summ: Double = 5000
let percent: Double = 5
var finalSumm = Summ
for _ in 1...5 {
    finalSumm = (finalSumm + finalSumm *  percent / 100)
    } 
print("Через пять лет на Вашем счете будет \((finalSumm * 100).rounded() / 100) рублей ") 


    //Расчет квадратного уравниения ver#2 
    //x2 − 2x − 3 = 0;
let a1: Double = 1
let b1: Double = -2
let c1: Double = -3

var Disc: Double = pow(b1,2) - (4 * a1 * c1)
print(Disc)
var x1 = ((-b1) + Disc.squareRoot()) / 2 * a1
var x2 = ((-b1) - Disc.squareRoot()) / 2 * a1

if Disc > 0 {
    print("Дискриминант Вашего уравнения больше нуля, следовательно у него два корня: \(x1) и \(x2)")
}
else if Disc == 0 {
    print("Дискриминант Вашего уравнения равен нулю, следовательно у него один корень: \(x1)")
} 
else {
    print("Дискриминант Вашего уравнения меньше нуля, следовательно у него нет корней")
    }
